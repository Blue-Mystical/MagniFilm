<%- include('partials/header.ejs') %>
<div class="container">
  <h1>REGISTER</h1>
  <form action='/register' method="POST">
    <div class="form-group mb-3">
      <label class="form-label">Username</label>
      <input type="text" pattern="[A-Z][a-z]{0-9}" class="form-control" name="username" placeholder="Your Username">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Email</label>
        <input type="email" class="form-control" name="email" placeholder="Your Email">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Password</label>
      <input type="password" class="form-control" name="password" placeholder="Password must have 8 characters or over"
      min=8 max=100>
    </div>
    <button type="submit" class="btn btn-primary" value='register'>Register Now</button>
  </form>
</div>
<%- include('partials/footer.ejs') %>