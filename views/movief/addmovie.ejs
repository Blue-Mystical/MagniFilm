<%- include('../partials/header.ejs') %>
<div class="container py-4 mt-4 bg-secondary rounded-3">
  <h1 class="display-4 fw-bold text-center text-white">Adding new movie</h1>
  <form action='/movies' method="POST" enctype="multipart/form-data" class="text-white">
    <div class="form-group mb-3">
      <label class="form-label">Movie name</label>
      <input type="text" class="form-control" name="movie[moviename]" placeholder="Name" required>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Film Date</label>
        <input type="date" class="form-control" name="movie[airdate]" placeholder="Date" value="<%= helper.changeDateFormat(currentDate) %>">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Description</label>
      <textarea class="form-control" rows="5" name="movie[desc]" placeholder="Description of the movie" required></textarea>
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Length</label>
      <input type="number" class="form-control" name="movie[length]" placeholder="Length of the movie (must be in minutes)" required>
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Genres</label>

      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="action" id="check1" name="movie[genre]">
        <label class="form-check-label" for="check1">
          Action
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="adventure" id="check2" name="movie[genre]">
        <label class="form-check-label" for="check2">
          Adventure
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="animation" id="check3" name="movie[genre]">
        <label class="form-check-label" for="check3">
          Animation
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="comedy" id="check4" name="movie[genre]">
        <label class="form-check-label" for="check4">
          Comedy
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="drama" id="check5" name="movie[genre]">
        <label class="form-check-label" for="check5">
          Drama
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="fantasy" id="check6" name="movie[genre]">
        <label class="form-check-label" for="check6">
          Fantasy
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="horror" id="check7" name="movie[genre]">
        <label class="form-check-label" for="check7">
          Horror
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="musical" id="check8" name="movie[genre]">
        <label class="form-check-label" for="check8">
          Musical
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="mystery" id="check9" name="movie[genre]">
        <label class="form-check-label" for="check9">
          Mystery
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="romance" id="check10" name="movie[genre]">
        <label class="form-check-label" for="check10">
          Romance
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="scifi" id="check11" name="movie[genre]">
        <label class="form-check-label" for="check11">
          Sci-fi
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="thriller" id="check12" name="movie[genre]">
        <label class="form-check-label" for="check12">
          Thriller
        </label>
      </div>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="western" id="check13" name="movie[genre]">
        <label class="form-check-label" for="check13">
          Western
        </label>
      </div>

      <div class="form-group mb-3">
        <label for="movierating" class="form-label">Rating</label>
        <div class="row">
          <div class="col-sm-12">
            <select class="form-select" aria-label="Rating" name="movie[movierating]" required>
              <option value="g">G</option>
              <option value="pg">PG</option>
              <option value="pg13">PG-13</option>
              <option value="r">R</option>
              <option value="nc17">NC-17</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  
    <div class="form-group mb-3">
      <label class="form-label">Poster Image</label>
      <input type="file" class="form-control" name="image" accept="image/*">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Trailer URL</label>
      <input type="text" class="form-control" name="movie[trailer]" placeholder="ONLY USE THE VIDEO ID!">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
</div>
<%- include('../partials/footer.ejs') %>