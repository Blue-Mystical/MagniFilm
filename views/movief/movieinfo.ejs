<%- include('../partials/header.ejs') %>

<h1><%= movie.moviename %></h1>
<img src="<%= movie.image %>" alt="AAAAAAAA" height="600px">
<p><%= movie.desc %></p>
<p><%= movie.airdate %></p>

<p>
    <%= movie.likecount %> liked this movie
</p>

<p><h2>Reviews (<%= movie.reviewcount %>)</h2></p>

<a class="btn btn-primary" href='/movies/<%= movie._id %>/reviews/new'>Add your review</a> 
<% movie.review.forEach(function(review) { %>
    <p>
        <strong><%= review.user %></strong> - <strong><%= review.text %></strong>
    </p>
<% }); %>

<%- include('../partials/footer.ejs') %>