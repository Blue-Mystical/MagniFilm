<%- include('../partials/header.ejs') %>

  <div class="album py-3 bg-secondary">
    <div class="container">

      <nav class="navbar navbar-expand-lg navbar-light bg-secondary mb-3">
        <div class="container-fluid">
          <a class="navbar-brand active text-white" href="#">Now Showing</a>
          <a class="navbar-brand text-white" href="#">Coming Soon</a>
        </div>
      </nav>

      <div class="row">

        <% movielist.forEach(function(movie) { %>
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xxl-3 mb-3">  
          <div class="card pt-2 box-shadow h-100">
            <a href='/movies/<%= movie._id %>' class="btn btn-outline-white">
              <img class="card-img-top" src="<%= movie.image %>" alt="AAAAAAAA" height="360px">
            </a>
            <div class="card-body d-flex flex-column">
              <p class="card-text fw-bold"><%= movie.moviename %></p>
              <p class="card-text"><%= helper.getShortDate(movie.airdate) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h6 class="fw-light">Genres: <%= helper.CapAndJoin(movie.genre) %></h6>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="d-grid gap-2 d-flex justify-content-center">
                      <p class="lead fw-light">
                        <% if(!currentUser) {%>
                          <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                        <% } else { %>
                          
                          <% if (helper.findLiked(currentUser.likedMovie, movie._id)) { %>
                            <span style="color: hotpink;"><i class="fas fa-heart mf-auto me-2 "></i></span><%= movie.likecount %>
                            <% } else { %> 
                              <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                            <% } %>
                        <% } %>
                      </p>

                      <p class="lead fw-light">
                        <i class="fas fa-star"></i>
                        <% if (movie.avgrating == -1) { %> 
                          -/10
                        <% } else { %>  
                          <%= (movie.avgrating).toFixed(1) %>/10
                        <% } %> 
                      </p>
                        
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>

      </div>
    </div>
  </div>

<%- include('../partials/footer.ejs') %>