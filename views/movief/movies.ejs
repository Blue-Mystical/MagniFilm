<%- include('../partials/header.ejs') %>

  <div class="album py-3 bg-secondary">
    <div class="container">

      <div class='row'>
        <div class='col-12 col-xl-4'>
          <nav class="navbar navbar-expand-lg navbar-light bg-secondary mb-2">
            <div class="container">
              <a class="nav-item nav-link active text-white text-center" href="/movies">Now Showing</a>
              <a class="nav-item nav-link text-white text-center" href="/movies?type=cs">Coming Soon</a>
            </div>
          </nav>
        </div>
      </div>
        

      <div class="row">

        <% movielist.forEach(function(movie) { %>
        <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xl-2 pb-4">
          <div class="card box-shadow h-100">
            <a href='/movies/<%= movie._id %>' class="btn btn-outline-primary">
              <img class="card-img-top card-img-top" src="<%= movie.image %>" alt="AAAAAAAA" height="240">
            </a>
            <div class="card-body d-flex flex-column">
              <p class="card-text fw-bold"><%= movie.moviename %></p>
              <p class="card-text">
                <% if(helper.getAirDateColor(movie.airdate) == 0) { %> 
                  <span style="color: black;"><i class="fas fa-film mf-auto me-1"></span></i>
                <% } else if (helper.getAirDateColor(movie.airdate) == 1) { %> 
                  <span style="color: #dc3545;"><i class="fas fa-film mf-auto me-1"></span></i>
                <% } else { %> 
                  <span style="color: #ffc107;"><i class="fas fa-film mf-auto me-1"></span></i>
                <% } %> 
                <%= helper.getShortDate(movie.airdate) %>
              </p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="d-grid gap-2 d-flex justify-content-center">
                  <p class="fw-light">
                    <% if(!currentUser) {%>
                      <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                    <% } else { %>
                      
                      <% if (helper.findLiked(currentUser.likedMovie, movie._id)) { %>
                          <span style="color: hotpink;"><i class="fas fa-heart mf-auto me-2 "></i></span><%= movie.likecount %>
                        <% } else { %> 
                          <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                        <% } %>
                    <% } %>
                  </p>

                  <p class="fw-light">
                    <i class="fas fa-star"></i>
                    <% if (movie.avgrating == -1) { %> 
                      -/10
                    <% } else { %>  
                      <%= (movie.avgrating).toFixed(1) %>/10
                    <% } %> 
                  </p>

                </div>

              </div>
            </div>
          </div>
        </div>
        <% }); %>

      </div>
    </div>
  </div>

<%- include('../partials/footer.ejs') %>