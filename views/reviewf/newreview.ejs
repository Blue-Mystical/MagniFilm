<%- include('../partials/header.ejs') %>
<div class="container">
  <form action='/movies/<%= movie._id %>/reviews' method="POST">
    <div class="form-group mb-3">
      <label class="form-label">Username</label>
      <input type="text" pattern="[A-Z][a-z]{0-9}" class="form-control" name="user" placeholder="Your Username">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Review</label>
        <input type="text" class="form-control" name="review" placeholder="Comment">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <a href='/movies'>Go back</a>
  </form>
</div>
<%- include('../partials/footer.ejs') %>