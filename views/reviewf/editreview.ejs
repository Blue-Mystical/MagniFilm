<%- include('../partials/header.ejs') %>
<div class="container py-4 mt-4 bg-secondary">
  <h1 class="display-5 fw-bold text-center py-3 bg-dark text-white">Editing review</h1>
  <form class='text-white' action='/movies/<%= movie_id %>/reviews/<%= review._id %>?_method=PUT' method="POST">
    <div class="form-group mb-3">
        <label class="form-label">Review</label>
        <textarea class="form-control" rows="5" name="review[text]" placeholder="<%= review.text %>" required><%= review.text %></textarea>
    </div>

    <div class="form-group mb-3">
      <label for="rating" class="form-label">Rating</label>
      <div class="row">
        <div class="col-sm-12">
          <select class="form-select" aria-label="Rating" name="review[rating]" required>
            <option value=1 <% if(review.rating==1) {%> selected <% } %> >1</option>
            <option value=2 <% if(review.rating==2) {%> selected <% } %> >2</option>
            <option value=3 <% if(review.rating==3) {%> selected <% } %> >3</option>
            <option value=4 <% if(review.rating==4) {%> selected <% } %> >4</option>
            <option value=5 <% if(review.rating==5) {%> selected <% } %> >5</option>
            <option value=6 <% if(review.rating==6) {%> selected <% } %> >6</option>
            <option value=7 <% if(review.rating==7) {%> selected <% } %> >7</option>
            <option value=8 <% if(review.rating==8) {%> selected <% } %> >8</option>
            <option value=9 <% if(review.rating==9) {%> selected <% } %> >9</option>
            <option value=10 <% if(review.rating==10) {%> selected <% } %> >10</option>
          </select>
        </div>
      </div>
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
</div>
<%- include('../partials/footer.ejs') %>