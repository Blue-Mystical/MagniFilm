<%- include('partials/header.ejs') %>
<div class="container">
  <form action='/movies' method="POST">
    <div class="form-group mb-3">
      <label class="form-label">Movie name</label>
      <input type="text" class="form-control" name="name" placeholder="Name">
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Film Date</label>
        <input type="date" class="form-control" name="airdate" placeholder="URL" value="2021-04-20">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Descriptiom</label>
      <input type="text" class="form-control" name="desc" placeholder="Description of the movie">
   </div>
    <div class="form-group mb-3">
      <label class="form-label">Image URL</label>
      <input type="text" class="form-control" name="image" placeholder="URL">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <a href='/movies'>Go back</a>
  </form>
</div>
