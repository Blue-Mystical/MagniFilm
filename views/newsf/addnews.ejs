<%- include('../partials/header.ejs') %>
<div class="container py-4 mt-4 bg-secondary rounded-3">
  <h1 class="display-4 fw-bold text-center text-white">Adding news</h1>
  <form action='/news' method="POST" enctype="multipart/form-data" class="text-white">
    <div class="form-group mb-3">
      <label class="form-label">Title</label>
      <input type="text" class="form-control" name="news[title]" placeholder="Title" required>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Caption</label>
        <input type="text" class="form-control" name="news[caption]" placeholder="Caption">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Thumbnail</label>
      <input type="file" class="form-control" name="image" accept="image/*">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Featuring on the carousel</label>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="true" id="check1" name="news[featured]">
        <label class="form-check-label" for="check1">
          Enabled
        </label>
      </div>
    </div>
    <!-- <div class="form-group mb-3">
      <label class="form-label">Has its page and appears in the page list</label>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="true" id="check2" name="news[haspage]">
        <label class="form-check-label" for="check2">
          Enabled
        </label>
      </div>
    </div> -->

    <div class="form-group mb-3">
      <label for="newstype" class="form-label">Type</label>
      <div class="row">
        <div class="col-sm-12">
          <select class="form-select" aria-label="Rating" name="news[newstype]" required>
            <option value="news">News</option>
            <option value="promo">Promotion</option>
          </select>
        </div>
      </div>
    </div>

    <div class="form-group mb-3">
      <label class="form-label">Contents</label>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 1"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 2"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 3"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 4"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 5"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 6"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 7"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 8"></textarea>
      <textarea class="form-control my-1" rows="5" name="invcontent" placeholder="Content 9"></textarea>
    </div>
    

    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
</div>
<%- include('../partials/footer.ejs') %>