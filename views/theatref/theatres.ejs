<%- include('../partials/header.ejs') %>


  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">

        <% theatrelist.forEach(function(theatre) { %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%= theatre.icon %>" alt="AAAAAAAA" height="500px">
            <div class="card-body">
              <p class="card-text"><%= theatre.theatrename %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href='/theatres/<%= theatre._id %>' class="btn btn-sm btn-outline-secondary">View</a>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>

      </div>
    </div>
  </div>

<%- include('../partials/footer.ejs') %>