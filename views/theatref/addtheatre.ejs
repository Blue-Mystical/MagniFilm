<%- include('../partials/header.ejs') %>
<div class="container">
  <form action='/theatres' method="POST">
    <div class="form-group mb-3">
      <label class="form-label">Theatre name</label>
      <input type="text" class="form-control" name="name" placeholder="Name">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Description</label>
      <input type="text" class="form-control" name="desc" placeholder="Description of the theatre">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Location</label>
      <input type="text" class="form-control" name="location" placeholder="Where it is located">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Icon URL</label>
      <input type="text" class="form-control" name="icon" placeholder="URL">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

    <a href='/theatres'>Go back</a>
  </form>
</div>
<%- include('../partials/footer.ejs') %>