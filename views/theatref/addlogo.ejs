<%- include('../partials/header.ejs') %>
<div class="container py-4 mt-4 bg-secondary rounded-3">
  <h1 class="display-4 fw-bold text-center text-white">Add logo for theatres</h1>
  <form action='/theatres/logo' method="POST" enctype="multipart/form-data" class="text-white">
    <div class="form-group mb-3">
      <label class="form-label">Logo name</label>
      <input type="text" class="form-control" name="logo[name]" placeholder="This will appear for choosing when adding a new theatre" required>
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Priority</label>
      <input type="text" class="form-control" name="logo[priority]" placeholder="Lower number will appear first.">
    </div>
    <div class="form-group mb-3">
      <label class="form-label">Logo Image</label>
      <input type="file" class="form-control" name="image" accept="image/*" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

  </form>
</div>
<%- include('../partials/footer.ejs') %>