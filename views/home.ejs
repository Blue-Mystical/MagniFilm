<%- include('partials/header.ejs') %>

<div class="container">
  
  <div id="carouselCaptions" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <% for(var i = 1 ; i <= newslist.length ; i++) { %>
        <button type="button" data-bs-target="#carouselCaptions" data-bs-slide-to="<%= i %> " aria-label="Slide 2"></button>
      <% } %> 
    </div>
    <div class="carousel-inner">
  
      <div class="carousel-item active">
        <img src="assets/carouselfirst.jpg" class="d-block w-100 img-responsive" height="600">
        <div class="carousel-caption d-none d-md-block">
          <h5 class='text-white'>Welcome to Magnifilm!</h5>
          <p>A small place to review movies</p>
        </div>
      </div>
  
      <% newslist.forEach(function(news) { %>
        <div class="carousel-item">
          <img src="<%= news.image %>" class="d-block w-100 img-responsive">
          <div class="carousel-caption d-none d-md-block">
            <h5 class='text-white'><%= news.title %></h5>
            <p><%= news.caption %></p>
          </div>
        </div>
      <% }); %> 
  
    </div>
    
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
  </div>

</div>

  <div class="album pb-2 pt-1 bg-secondary">
      <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-secondary mb-1">
          <div class="container-fluid">
            <ul class="navbar-nav">
              <li class="nav-item btn btn-light">
                <a class="nav-link active text-black" aria-current="page" href="#">Hot Movies</a>
              </li>
          </div>
        </nav>

        <div class="row">

          <!-- Displays featured movies -->
          <% movielist.forEach(function(movie) { %>
            <%- include('partials/movieboxes.ejs', {movie : movie}) %> 
          <% }); %>

        </div>
      </div>
</div>
  

<%- include('partials/footer.ejs') %>