<%- include('partials/header.ejs') %>

<div class="container">
  <section class="jumbotron text-center">
    <div class="container my-4">
      <h1 class="jumbotron-heading">Welcome to MagniFilm!</h1>
      <p class="lead">A place to review movies</p>
    </div>
  </section>
</div>


<div class="album py-3 bg-secondary">
    <div class="container">

      <nav class="navbar navbar-expand-lg navbar-light bg-secondary mb-3">
        <div class="container-fluid">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active text-white" aria-current="page" href="#">Now Showing</a>
            </li>
        </div>
      </nav>

      <div class="row">

        <% movielist.forEach(function(movie) { %>
        <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xxl-2 mb-3 mb-lg-0 ">
          <div class="card box-shadow h-100">
            <a href='/movies/<%= movie._id %>' class="btn btn-outline-primary">
              <img class="card-img-top card-img-top" src="<%= movie.image %>" alt="AAAAAAAA" height="240">
            </a>
            <div class="card-body d-flex flex-column">
              <p class="card-text fw-bold"><%= movie.moviename %></p>
              <p class="card-text"><%= helper.getShortDate(movie.airdate) %></p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="d-grid gap-2 d-flex justify-content-center">
                  <p class="fw-light">
                    <% if(!currentUser) {%>
                      <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                    <% } else { %>
                      
                      <% if (helper.findLiked(currentUser.likedMovie, movie._id)) { %>
                          <span style="color: hotpink;"><i class="fas fa-heart mf-auto me-2 "></i></span><%= movie.likecount %>
                        <% } else { %> 
                          <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                        <% } %>
                    <% } %>
                  </p>

                  <p class="fw-light">
                    <i class="fas fa-star"></i>
                    <% if (movie.avgrating == -1) { %> 
                      -/10
                    <% } else { %>  
                      <%= (movie.avgrating).toFixed(1) %>/10
                    <% } %> 
                  </p>

                </div>

              </div>
            </div>
          </div>
        </div>
        <% }); %>

      </div>
    </div>
</div>

<%- include('partials/footer.ejs') %>