<%- include('partials/header.ejs') %>

<div class="container">
  
<div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
  </div>
  <div class="carousel-inner">

    <div class="carousel-item active">
      <img src="https://wallpapercave.com/wp/wp1812372.jpg" class="d-block w-100 img-responsive" height="600">
      <div class="carousel-caption d-none d-md-block">
        <h5 class='text-black'>Welcome to Magnifilm!</h5>
        <p>A place to review movies</p>
      </div>
    </div>

    <% promolist.forEach(function(promo) { %>
      <div class="carousel-item">
        <img src="<%= promo.image %>" class="d-block w-100 img-responsive">
        <div class="carousel-caption d-none d-md-block">
          <h5 class='text-black'><%= promo.title %></h5>
          <p><%= promo.caption %></p>
        </div>
      </div>
    <% }); %> 

  </div>
  
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

</div>

  <div class="album pb-2 pt-1 bg-secondary">
      <div class="container">

        <nav class="navbar navbar-expand-lg navbar-light bg-secondary mb-1">
          <div class="container-fluid">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active text-white" aria-current="page" href="#">Top Rated Movies</a>
              </li>
          </div>
        </nav>

        <div class="row">

          <% movielist.forEach(function(movie) { %>
          <div class="col-6 col-sm-6 col-md-4 col-lg-3 col-xxl-2 mb-3 mb-lg-0 ">
            <div class="card box-shadow h-100">
              <a href='/movies/<%= movie._id %>' class="btn btn-outline-primary">
                <img class="card-img-top card-img-top" src="<%= movie.image %>" alt="AAAAAAAA" height="240">
              </a>
              <div class="card-body d-flex flex-column">
                <p class="card-text fw-bold"><%= movie.moviename %></p>
                <p class="card-text"><%= helper.getShortDate(movie.airdate) %></p>

                <div class="d-flex justify-content-between align-items-center">
                  <div class="d-grid gap-2 d-flex justify-content-center">
                    <p class="fw-light">
                      <% if(!currentUser) {%>
                        <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                      <% } else { %>
                        
                        <% if (helper.findLiked(currentUser.likedMovie, movie._id)) { %>
                            <span style="color: hotpink;"><i class="fas fa-heart mf-auto me-2 "></i></span><%= movie.likecount %>
                          <% } else { %> 
                            <i class="far fa-heart mf-auto me-2"></i><%= movie.likecount %>
                          <% } %>
                      <% } %>
                    </p>

                    <p class="fw-light">
                      <i class="fas fa-star"></i>
                      <% if (movie.avgrating == -1) { %> 
                        -/10
                      <% } else { %>  
                        <%= (movie.avgrating).toFixed(1) %>/10
                      <% } %> 
                    </p>

                  </div>

                </div>
              </div>
            </div>
          </div>
          <% }); %>

        </div>
      </div>
</div>
  

<%- include('partials/footer.ejs') %>