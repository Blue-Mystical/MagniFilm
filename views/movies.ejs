<%- include('partials/header.ejs') %>

<section class="jumbotron text-center">
    <div class="container">
      <h1 class="jumbotron-heading">Album example</h1>
      <p class="lead text-muted">Welcome to MagniFilm! A place to review movies</p>
    </div>
  </section>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">

        <% movielist.forEach(function(movie) { %>
        <div class="col-md-4">
          <div class="card mb-4 box-shadow">
            <img class="card-img-top" src="<%= movie.image %>" alt="AAAAAAAA" height="500px">
            <div class="card-body">
              <p class="card-text"><%= movie.moviename %></p>
              <p class="card-text"><%= movie.airdate.getDate() + " " + monthShort[movie.airdate.getMonth()] + " " + movie.airdate.getFullYear() %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href='/movies/<%= movie._id %>' class="btn btn-sm btn-outline-secondary">View</a>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }); %>

      </div>
    </div>
  </div>

<%- include('partials/footer.ejs') %>